# Configuration Firebase (Frontend)
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_auth_domain_here
VITE_FIREBASE_PROJECT_ID=your_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_storage_bucket_here
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here

# URL de l'application (pour les webhooks et tracking)
VITE_APP_URL=https://your-domain.com

# ============================================
# Configuration Email (API Routes Vercel)
# ============================================

# Resend API Key
# Obtenir sur: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxx

# QStash Configuration (Upstash)
# Obtenir sur: https://console.upstash.com/qstash
QSTASH_URL=https://qstash.upstash.io
QSTASH_TOKEN=your_qstash_token
QSTASH_CURRENT_SIGNING_KEY=your_current_signing_key
QSTASH_NEXT_SIGNING_KEY=your_next_signing_key

# Firebase Admin (pour les API Routes)
# Option 1: Utiliser le service account JSON
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/serviceAccountKey.json

# Option 2: Variables individuelles (recommandé pour Vercel)
# FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
# FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# URL de base pour les webhooks (automatique sur Vercel)
# WEBHOOK_BASE_URL=https://your-app.vercel.app
# VERCEL_URL est automatiquement défini par Vercel

# ============================================
# Configuration optionnelle
# ============================================

# Email par défaut pour les envois
DEFAULT_FROM_EMAIL=noreply@your-domain.com
DEFAULT_FROM_NAME=FORNAP

# Batch size (nombre d'emails par batch)
# Par défaut: 50 (optimal pour Vercel Hobby)
# BATCH_SIZE=50

# Rate limit (emails par seconde)
# Par défaut: 8 (sûr pour Resend gratuit)
# RATE_LIMIT_PER_SECOND=8
